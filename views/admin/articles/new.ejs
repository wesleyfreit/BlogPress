<%- include('../../partials/header.ejs') %>

<body>
    <%- include ('../../partials/navbar.ejs') %>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3>Novo Artigo</h3>
            </div>
            <div class="card-body">
                <form method="post" action="/admin/articles/save">
                    <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo" required>
                    <br>
                    <textarea id="article" class="form-control" name="body" placeholder="Escreva o artigo aqui"></textarea>
                    <br>
                    <label for="category">Selecione a Categoria</label>
                    <select name="category" class="form-control" required>
                        <option value="" data-default disabled selected>Selecione</option>
                        <% categories.forEach(category => { %>
                           <option value="<%= category.id %>"><%= category.title %></option> 
                        <% }); %>
                    </select>
                    <br>
                    <button class="btn btn-primary">Cadastrar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<%- include ('../../partials/footer.ejs') %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist',
            'autolink',
            'link',
            'image', 
            'lists',
            'preview', 
            'searchreplace',
            'wordcount',
            'fullscreen',
            'insertdatetime',
            'media',
            'save',
            'table',
            'emoticons',
        ],
        auto_focus: 'element1'
    });
</script>