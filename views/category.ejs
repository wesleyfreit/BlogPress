<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/homenavbar.ejs') %>
        <br>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3>
                        Artigos da Categoria: <%= category.title %>
                    </h3>
                </div>
            </div>
            <hr class="bg-secondary">

            <% articles.forEach(article => { %>
                <div class="card">
                    <div class="card-header">
                        <h3>
                            <%= article.title %>
                        </h3>
                    </div>
                    <div class="card-body">
                        <a class="btn btn-info" href="/<%= article.slug %>">Ler Artigo</a>
                    </div>
                </div>
            <% }) %>

        </div>
</body>
<%- include ('partials/footer.ejs') %>